{
  "name": "@stryker-mutator/ui-components",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist/build",
    "dist/types"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "main": "./dist/build/main.cjs.js",
      "module": "./dist/build/main.js"
    },
    "./*": {
      "module": "./dist/build/exports/*.js",
      "main": "./dist/build/exports/*.cjs.js",
      "types": "./dist/types/exports/*"
    },
    "./components/*": {
      "module": "./dist/build/components/*.js",
      "main": "./dist/build/components/*.cjs.js",
      "types": "./dist/types/components/*"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "lit": "^2.7.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.0"
  }
}